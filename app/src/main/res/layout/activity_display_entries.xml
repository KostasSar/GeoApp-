<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/displayId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/id_display"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"

            android:layout_marginStart="35dp" />

        <TextView
            android:id="@+id/displayUserId"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/user_id_display"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"

            android:layout_marginStart="35dp" />

        <TextView
            android:id="@+id/displayLongitude"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/longitude_display"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"

            android:layout_marginStart="35dp" />

        <TextView
            android:id="@+id/displayLatitude"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/latitude_display"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"

            android:layout_marginStart="35dp" />

        <TextView
            android:id="@+id/displayDt"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:text="@string/timestamp_display"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"

            android:layout_marginStart="35dp" />


    </LinearLayout>
</ScrollView>